{
    "js": {
        "src": [
            "js/*.js"
        ],
        "dest": "public/js/",
        "bundleFile": "bundle.js"
    },

    "jshint": {
        "reporter": "default"
    },

    "karma": {
        "configFile": "./spec/karma.config.coffee"
    },

    "less": {
       "src": "less/*.less",
        "watch": [
            "less/**/*.*"
        ],
        "dest": "public/css/"
    }
}
